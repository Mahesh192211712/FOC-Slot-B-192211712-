#include<stdio.h>
int main()
{
	int i,n, Sum=0, numbers;
	float Average;
	printf("Enter the range of numbers (end limit):\n");
	scanf("%d",&n);
	printf("\nEnter the elements one by one:\n");
	for(i=0;i<n;++i)
	{
		scanf("%d",&numbers);
		Sum += numbers;
	}
	Average = Sum/n;
	printf("\nSum of the %d Numbers = %d",n, Sum);
	printf("\nAverage of the %d Mumbers = %f",n, Average);
	return 0;
}
